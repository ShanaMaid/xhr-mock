{
  "name": "xhr-mock-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*",
      "tests/*",
      "website",
      "examples"
    ],
    "nohoist": [
      "**/@types/**"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.7.0",
    "@jameslnewell/babel-preset": "^2.1.0",
    "@jameslnewell/editor-config": "^1.0.1",
    "@jameslnewell/eslint-config": "^0.16.0",
    "@jameslnewell/jest-preset": "^2.0.0",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@types/jest": "^26.0.15",
    "eslint": "^7.12.1",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.0.5"
  },
  "babel": {
    "presets": [
      "@jameslnewell/babel-preset"
    ]
  },
  "eslintConfig": {
    "extends": "@jameslnewell/eslint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "preset": "@jameslnewell/jest-preset",
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/fetch",
      "<rootDir>/packages/proxy",
      "<rootDir>/tests"
    ]
  },
  "prettier": "@jameslnewell/prettier-config",
  "scripts": {
    "clean": "lerna exec -- rm -rf dist && lerna clean",
    "format": "prettier --write .",
    "type": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix . ",
    "build": "lerna run build",
    "test": "jest",
    "publish": "yarn run publish"
  }
}
